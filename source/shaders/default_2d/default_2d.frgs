#version 330 core
precision highp float;

in vec3 v_position;
in vec4 v_color;
in vec3 _gl_position;

uniform float u_time;
uniform vec2 u_resolution;

out vec4 color;

float sin_pos(float f) { return (1.0 + sin(f)) / 2.0; }

vec3 sin_pos_v3(vec3 v3)
{
   return vec3(
      sin_pos(v3.x),
      sin_pos(v3.y),
      sin_pos(v3.z)
   );
}

void main(void)
{
   color = vec4(sqrt(v_color.rgb), v_color.a); 
}
