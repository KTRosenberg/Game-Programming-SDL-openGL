#version 330 core
precision highp float;

in vec3 v_position;
in vec4 v_color;
in vec2 v_uv;
in vec3 v_position_cam;

out vec4 color;


void main(void)
{
   if (fract(v_position_cam.x + (v_position.x * 4.0)) < 0.04f || fract(v_position_cam.y + v_position.y * 4.0) < 0.04f) {
      color = vec4(sqrt(v_color.rgb), v_color.a);
   } else {
      color = vec4(0.0);
   } 
}
